# Environment configuration for Tokenized Weather API Backend

# Weather API Provider Configuration
WEATHER_API_PROVIDER=open-meteo

# Open-Meteo (FREE - No API key required!)
# Default provider - completely free with no limits
# No configuration needed

# OpenWeather API (Optional - only if using openweather provider)
OPENWEATHER_API_KEY=your_openweather_api_key_here

# WeatherAPI.com (Optional - only if using weatherapi provider)  
WEATHERAPI_KEY=your_weatherapi_key_here

# Algorand LocalNet Configuration
ALGOD_SERVER=http://localhost:4001
ALGOD_TOKEN=aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa
INDEXER_SERVER=http://localhost:8980
INDEXER_TOKEN=aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa

# Smart Contract Configuration (set after deployment)
MARKETPLACE_APP_ID=0
WEATHER_ASA_ID=0

# Server Configuration
HOST=localhost
PORT=8000
DEBUG=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Optional: Database Configuration
DATABASE_URL=sqlite:///./weather_api.db

# Optional: Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379/0

# Optional: Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Optional: CORS Configuration
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:8080"]